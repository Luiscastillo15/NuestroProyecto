{{define "agregar"}}
{{template "cabecera"}}

  <div class="h-screen flex justify-center items-center">
      <div class="card bg-gray-100 shadow-md rounded-lg overflow-hidden w-9/12">
    <div class="card-header px-4 py-3 border-b border-gray-200 font-bold text-lg text-gray-700">
      Telefonos
    </div>
    <div class="card-body px-4 py-5 space-y-4">
      <form action="/insertar" method="post">
        <div class="flex flex-col space-y-2">
          <label for="marca" class="text-sm font-medium text-gray-700">MARCA</label>
          <input type="text" id="marca" name="marca" class="rounded-md border border-gray-300 px-3 py-2 focus:outline-none focus:ring-1 focus:ring-blue-500" placeholder="Ingrese la marca">
        </div>
        <div class="flex flex-col space-y-2">
          <label for="modelo" class="text-sm font-medium text-gray-700">MODELO</label>
          <input type="text" id="modelo" name="modelo" class="rounded-md border border-gray-300 px-3 py-2 focus:outline-none focus:ring-1 focus:ring-blue-500" placeholder="Ingrese el modelo">
        </div>
        <div class="flex flex-col space-y-2">
          <label for="precio" class="text-sm font-medium text-gray-700">PRECIO</label>
          <input type="number" id="precio" name="precio" class="rounded-md border border-gray-300 px-3 py-2 focus:outline-none focus:ring-1 focus:ring-blue-500" placeholder="Ingrese el precio" value="0">
        </div>

        <div class="flex items-center justify-center my-6">
        <button type="submit" class="px-4 py-2 bg-blue-500 text-white font-bold rounded-md shadow hover:bg-blue-700">
          Agregar nuevo telefono
        </button>
        </div>
      </form>
    </div>
    </div>
  </div>

{{template "pie"}}
{{end}}